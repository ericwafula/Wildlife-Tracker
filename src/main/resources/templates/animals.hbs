{{#partial "styles"}}
    <link rel="stylesheet" href="/css/animals.css">
{{/partial}}

{{#partial "content"}}
    <div class="container-fluid">
        <div class="row success-parent-container">
            <div class="col-md-6 success-child-container">
                <p id="heading-animals">All Animals</p>
                {{#if animals}}
                    {{#each animals}}
                        <ul id="animals">
                            <li>Species: <span id="value"> {{name}} </span></li>
                            <li>Category: <span id="value">  {{danger}}</span></li>
                            <li>Health: <span id="value">  {{health}}</span></li>
                            <li>Age: <span id="value">  {{age}}</span></li>
                            <li>Location Spotted: <span id="value">{{location}}</span><span id="value"></span></li>
                            <p id="ranger">Submited by: <span id="value">{{ranger}}</p>
                        </ul>
                    {{/each}}
                    <div class="buttons">
                        <a href="/">
                            <button class="btn add-new-success">Make Another Submission</button>
                        </a>
                    </div>
                {{else}}
                    <p>No Animal found in records</p>
                    <a href="/">
                        <button class="btn add-new-success">Add a New Submittion</button>
                    </a>
                {{/if}}
            </div>
            <div class="col-md-6 img-success">
                <img src="/images/penguin.png" alt="fox">
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}