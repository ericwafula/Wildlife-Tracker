{{#partial "styles"}}
    <link rel="stylesheet" href="/css/animals.css">
{{/partial}}

{{#partial "content"}}
    <div class="container-fluid">
        <div class="row success-parent-container">
            <div class="col-md-6 success-child-container">
                <p id="heading-animals">All Animals</p>
                <div class="animal">
                    <ul id="animals">
                        <li>Species: <span id="value"></span></li>
                        <li>Category: <span id="value"></span></li>
                        <li>Location Spotted: <span id="value"></span></li>
                        <p id="ranger">Submited by <br><span id="date">on </span></p>
                    </ul>
                </div>
                <div class="buttons">
                    <a href="/">
                        <button class="btn add-new-success">Make Another Submittion</button>
                    </a>
                </div>
            </div>
            <div class="col-md-6 img-success">
                <img src="/images/penguin.png" alt="fox">
            </div>
        </div>
    </div>
{{/partial}}

